    <script>
        const scheduleData = [
            { dia: "Segunda", lang: "Italiano", steps: ["Escuta curta", "Repeti√ß√£o", "3 frases", "Registro"] },
            { dia: "Ter√ßa", lang: "Franc√™s", steps: ["Escuta guiada", "Leitura", "Frases pr√≥prias", "Registro"] },
            { dia: "Quarta", lang: "Italiano", steps: ["Revis√£o", "Novo di√°logo", "Pr√°tica oral", "Registro"] },
            { dia: "Quinta", lang: "Franc√™s", steps: ["Revis√£o", "Leitura guiada", "Produ√ß√£o", "Registro"] },
            { dia: "Sexta", lang: "Revis√£o Geral", steps: ["Revisar anota√ß√µes", "Repetir frases", "Ouvir novamente"] },
            { dia: "S√°bado", lang: "Pr√°tica Func.", steps: ["Simula√ß√£o real", "Fala espont√¢nea", "Registro"] },
            { dia: "Domingo", lang: "Pausa Estrut.", steps: ["Exposi√ß√£o leve (√°udio/m√∫sica)"] }
        ];

        const indicators = [
            "Iniciei no hor√°rio previsto",
            "Mantive o tempo de 20 min",
            "Completei todas as etapas",
            "Registrei aprendizado",
            "Evitei adiar"
        ];

        const daysShort = ["SEG", "TER", "QUA", "QUI", "SEX", "S√ÅB", "DOM"];

        function toggleCheck(el) {
            el.classList.toggle('checked');
        }

        // Render Schedule
        const scheduleBody = document.getElementById('schedule-body');
        scheduleData.forEach((item) => {
            const tr = document.createElement('tr');
            tr.className = "border-b border-slate-50 day-row";
            tr.dataset.dia = item.dia;
            tr.dataset.lang = item.lang;
            
            const stepsHtml = item.steps.map(step => `
                <div class="flex items-center gap-2 mb-1 sub-step-row">
                    <span class="checkbox-custom sub-check" onclick="toggleCheck(this)" data-label="${step}"></span>
                    <span class="text-xs text-slate-600">${step}</span>
                </div>
            `).join('');

            tr.innerHTML = `
                <td class="py-4 px-4 font-bold text-slate-800 text-sm">${item.dia}</td>
                <td class="py-4 px-4"><span class="bg-blue-100 text-blue-700 px-2 py-0.5 rounded-full text-[10px] font-semibold">${item.lang}</span></td>
                <td class="py-4 px-4">${stepsHtml}</td>
                <td class="py-4 px-4 text-center">
                    <div class="checkbox-custom w-8 h-8 rounded-lg main-day-check" onclick="toggleCheck(this)"></div>
                </td>
            `;
            scheduleBody.appendChild(tr);
        });

        // Render Indicators
        const indicatorsBody = document.getElementById('indicators-body');
        indicators.forEach(text => {
            const tr = document.createElement('tr');
            tr.className = "border-b border-slate-50 indicator-row";
            tr.dataset.indicator = text;
            
            let cells = `<td class="py-3 px-2 text-left text-xs text-slate-700">${text}</td>`;
            for(let i=0; i<7; i++) {
                cells += `<td class="py-3 px-1"><span class="checkbox-custom indicator-check" onclick="toggleCheck(this)" data-day-idx="${i}"></span></td>`;
            }
            
            tr.innerHTML = cells;
            indicatorsBody.appendChild(tr);
        });

        function sendToWhatsApp() {
            const phone = "5511985870689";
            let message = `üöÄ *RELAT√ìRIO DE ESTUDOS - THIAGO*\n\n`;

            // 1. PLANO DE A√á√ÉO DETALHADO
            message += `*üìÖ DETALHAMENTO DI√ÅRIO*\n`;
            document.querySelectorAll('.day-row').forEach(row => {
                const dia = row.dataset.dia;
                const lang = row.dataset.lang;
                const isMainChecked = row.querySelector('.main-day-check').classList.contains('checked');
                
                // Coleta sub-etapas marcadas
                let subSteps = [];
                row.querySelectorAll('.sub-check.checked').forEach(sc => {
                    subSteps.push(sc.dataset.label);
                });

                if (isMainChecked || subSteps.length > 0) {
                    message += `*${dia} (${lang})* ${isMainChecked ? '‚úÖ' : '‚è≥'}\n`;
                    subSteps.forEach(s => message += `  ‚ñ´Ô∏è ${s}\n`);
                }
            });

            // 2. CHECKLIST DE EXECU√á√ÉO (INDICADORES)
            message += `\n*üìä INDICADORES DE CONST√ÇNCIA*\n`;
            document.querySelectorAll('.indicator-row').forEach(row => {
                const indicator = row.dataset.indicator;
                let daysCompleted = [];
                row.querySelectorAll('.indicator-check.checked').forEach(ic => {
                    daysCompleted.push(daysShort[ic.dataset.day_idx]);
                });

                if (daysCompleted.length > 0) {
                    message += `‚Ä¢ ${indicator}: _${daysCompleted.join(', ')}_\n`;
                }
            });

            // 3. AUTOAVALIA√á√ÉO
            const daysCount = document.getElementById('eval-days').value || "0";
            const ease = document.getElementById('eval-ease').value || "...";
            const diff = document.getElementById('eval-diff').value || "...";
            const adjust = document.getElementById('eval-adjust').value || "...";

            message += `\n*üìù AUTOAVALIA√á√ÉO*\n`;
            message += `‚úî Dias conclu√≠dos: ${daysCount}/7\n`;
            message += `‚úî Facilidade: ${ease}\n`;
            message += `‚úî Dificuldade: ${diff}\n`;
            message += `‚úî Ajuste: ${adjust}\n\n`;
            message += `_Foco: Come√ßar, fazer pequeno e concluir!_`;

            const encodedMessage = encodeURIComponent(message);
            window.open(`https://wa.me/${phone}?text=${encodedMessage}`, '_blank');
        }
    </script>
